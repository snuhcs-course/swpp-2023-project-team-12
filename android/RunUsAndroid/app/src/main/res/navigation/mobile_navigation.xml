<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.runusandroid.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.runusandroid.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.runusandroid.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.runusandroid.ui.history.HistoryFragment"
        android:label="history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_single_mode"
        android:name="com.example.runusandroid.ui.single_mode.SingleModeFragment"
        android:label="single_mode"
        tools:layout="@layout/fragment_single_mode" />

    <fragment
        android:id="@+id/navigation_multi_mode"
        android:name="com.example.runusandroid.ui.multi_mode.MultiModeFragment"
        android:label="multi_mode"
        tools:layout="@layout/fragment_multi_mode" />
</navigation>